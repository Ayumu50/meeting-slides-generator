{
  "name": "議事録スライド生成アプリ",
  "description": "営業の打ち合わせ議事録から自動でPowerPointスライドを生成するWebアプリ",
  "repository": "https://github.com/your-username/meeting-slides-generator",
  "logo": "https://cdn.jsdelivr.net/npm/heroicons@1.0.6/outline/presentation-chart-bar.svg",
  "keywords": ["flask", "powerpoint", "ai", "meeting", "slides"],
  "env": {
    "AZURE_OPENAI_API_KEY": {
      "description": "Azure OpenAI API Key (optional)",
      "required": false
    },
    "AZURE_OPENAI_ENDPOINT": {
      "description": "Azure OpenAI Endpoint (optional)",
      "required": false
    },
    "AZURE_OPENAI_DEPLOYMENT": {
      "description": "Azure OpenAI Deployment Name (optional)",
      "value": "gpt-4o-mini",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}